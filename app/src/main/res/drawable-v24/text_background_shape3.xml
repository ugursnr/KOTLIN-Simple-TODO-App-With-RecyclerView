<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners
        android:radius="10dp"
        />
    <gradient
        android:angle="45"
        android:centerX="50%"
        android:centerColor="#DDF1A7"
        android:startColor="@color/Palette3"
        android:endColor="@color/Palette3"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />

    <stroke
        android:width="2dp"
        android:color="@color/Palette1"
        />

</shape>